{
	"name": "iar-debug",
	"displayName": "IAR C-SPY Debug",
	"version": "0.25.0",
	"publisher": "iarsystems",
	"icon": "images/logo.png",
	"galleryBanner": {
		"color": "#ffe000",
		"theme": "light"
	},
	"description": "An example extension & Debug Adapter for C-SPY with VS Code",
	"repository": {
		"type": "git",
		"url": "https://github.com/mario-pi/iar-vsc-debug"
	},
	"homepage": "https://www.iar.com/",
	"keywords": [
		"IAR",
		"C-SPY",
		"debuggers",
		"ARM",
		"Embedded",
		"IoT",
		"c",
		"c++",
		"cpp",
		"i-jet",
		"j-link",
		"jlink",
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.46.0",
		"node": "^14.4.0"
	},
	"categories": [
		"Debuggers"
	],
	"extensionDependencies": [
		"ms-vscode.vscode-embedded-tools"
	],
	"private": true,
	"dependencies": {
		"@vscode/debugadapter": "^1.53.0",
		"@vscode/debugprotocol": "^1.53.0",
		"async-mutex": "^0.3.2",
		"await-notify": "1.0.1",
		"bufferutil": "^4.0.6",
		"iar-vsc-common": "git@github.com:IARSystems/iar-vsc-common.git#5d1ad791",
		"thrift": "^0.12.0",
		"utf-8-validate": "^5.0.9",
		"uuid": "^8.3.2",
		"xmlbuilder2": "^3.0.2"
	},
	"devDependencies": {
		"@types/jsdom": "^16.2.14",
		"@types/mocha": "^5.2.7",
		"@types/node": "^14.7.0",
		"@types/node-int64": "^0.4.29",
		"@types/thrift": "^0.10.9",
		"@types/uuid": "^8.3.1",
		"@types/vscode": "^1.46.0",
		"@typescript-eslint/eslint-plugin": "^5.2.0",
		"@typescript-eslint/parser": "^5.2.0",
		"@vscode/debugadapter-testsupport": "^1.51.0",
		"eslint": "^8.1.0",
		"eslint-plugin-deprecation": "^1.3.2",
		"husky": "^7.0.4",
		"jsdom": "^19.0.0",
		"mocha": "^9.2.0",
		"ts-loader": "^9.2.6",
		"typescript": "^4.3.0",
		"vsce": "^2.6.4",
		"webpack": "^5.68.0",
		"webpack-cli": "^4.9.2"
	},
	"scripts": {
		"lint": "eslint . --ext .ts",
		"vscode:prepublish": "npm run package",
		"webpack": "webpack --mode development",
		"webpack-watch": "webpack --mode development --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"test-compile": "npm run webpack && tsc -p ./",
		"prepare": "husky install"
	},
	"main": "./dist/extension",
	"activationEvents": [
		"onDebugResolve:cspy",
		"onDebugDynamicConfigurations:cspy",
		"onDebugInitialConfigurations:cspy",
		"onCommand:iar.useAutoBreakpoints",
		"onCommand:iar.useHardwareBreakpoints",
		"onCommand:iar.useSoftwareBreakpoints"
	],
	"contributes": {
		"configuration": {
			"title": "IAR C-SPY Debug",
			"properties": {
				"iar-debug.breakpointType": {
					"default": "Auto",
					"description": "Whether to set hardware- or software breakpoints. This only affects drivers that support it. Changing this setting will not affect already installed breakpoints in active sessions.",
					"type": "string",
					"enum": [
						"Auto",
						"Hardware",
						"Software"
					],
					"enumDescriptions": [
						"Use the driver's default breakpoint type.",
						"Use hardware breakpoints.",
						"Use software breakpoints."
					]
				}
			}
		},
		"menus": {},
		"commands": [
			{
				"command": "iar.useAutoBreakpoints",
				"category": "IAR Debug",
				"title": "Set Breakpoint Type: Auto"
			},
			{
				"command": "iar.useHardwareBreakpoints",
				"category": "IAR Debug",
				"title": "Set Breakpoint Type: Hardware"
			},
			{
				"command": "iar.useSoftwareBreakpoints",
				"category": "IAR Debug",
				"title": "Set Breakpoint Type: Software"
			},
			{
				"command": "iar.useAutoBreakpointsActive",
				"category": "IAR Debug",
				"title": "Set Breakpoint Type: Auto (Current Session Only)",
				"enablement": "debugType == cspy"
			},
			{
				"command": "iar.useHardwareBreakpointsActive",
				"category": "IAR Debug",
				"title": "Set Breakpoint Type: Hardware (Current Session Only)",
				"enablement": "debugType == cspy"
			},
			{
				"command": "iar.useSoftwareBreakpointsActive",
				"category": "IAR Debug",
				"title": "Set Breakpoint Type: Software (Current Session Only)",
				"enablement": "debugType == cspy"
			}
		],
		"breakpoints": [
			{
				"language": "c"
			},
			{
				"language": "cpp"
			}
		],
		"debuggers": [
			{
				"type": "cspy",
				"label": "IAR C-SPY Debug",
				"program": "./out/dap/cspyDebug.js",
				"runtime": "node",
				"languages": [
					"c",
					"cpp"
				],
				"configurationAttributes": {
					"launch": {
						"required": [
							"target",
							"program",
							"workbenchPath",
							"driver",
							"driverOptions"
						],
						"properties": {
							"target": {
								"type": "string",
								"description": "The target type, e.g 'arm', in lower case.",
								"default": "arm"
							},
							"program": {
								"type": "string",
								"description": "Absolute path to a .out file to debug.",
								"default": "${workspaceFolder}/Debug/Exe/ewproj.out"
							},
							"stopOnEntry": {
								"type": "boolean",
								"description": "Automatically stop after launch.",
								"default": true
							},
							"trace": {
								"type": "boolean",
								"description": "Log all Debug Adapter Protocol traffic.",
								"default": true
							},
							"workbenchPath": {
								"type": "string",
								"description": "Path to the IAR Embedded Workbench installation to use (e.g. \"C:\\\\Program Files (x86)\\\\IAR Systems\\\\Embedded Workbench 8.3\").",
								"default": "${command:iar-settings.toolchain} for an iar-build project or path to EW root."
							},
							"projectPath": {
								"type": "string",
								"description": "Path to a .ewp file, or a folder in which to place debug settings files.",
								"default": "${command:iar-settings.project-file} for an iar-build project."
							},
							"projectConfiguration": {
								"type": "string",
								"description": "Name of the project configuration to debug (e.g. Debug). Only applicable to .ewp projects",
								"default": "${command:iar-settings.project-configuration} for an iar-build project. Remove this for other project types."
							},
							"driver": {
								"type": "string",
								"description": "The driver to use.",
								"default": "sim2",
								"enum": [
									"sim",
									"sim2",
									"imperas",
									"jet",
									"jlink",
									"gdbserv",
									"cadi",
									"lmiftdi",
									"pemicro",
									"stlink",
									"xds",
									"tifet"
								],
								"enumDescriptions": [
									"Simulator (32-bit) (RISCV)",
									"Simulator (32-bit) (ARM)",
									"Simulator (64-bit) (ARM)",
									"I-jet (ARM/RISCV)",
									"J-Link/J-Trace (ARM/RISCV)",
									"GDB Server (ARM/RISCV)",
									"CADI (ARM)",
									"TI Stellaris (ARM)",
									"PE micro (ARM)",
									"ST-LINK (ARM)",
									"TI XDS (ARM)",
									"TI MSP-FET (ARM)"
								]
							},
							"driverOptions": {
								"type": "array",
								"description": "The command line to use when launching the debugger. For reference, see \"Summary of C-SPY command line options\" in the C-SPY Debugging Guide: https://wwwfiles.iar.com/arm/webic/doc/EWARM_DebuggingGuide.ENU.pdf",
								"items": {
									"type": "string"
								},
								"default": [
									"--endian=little",
									"--cpu=<CPU_NAME>",
									"--fpu=None",
									"--semihosting"
								]
							},
							"download": {
								"type": "object",
								"description": "Options for downloading to hardware. Can be omitted.",
								"properties": {
									"flashLoader": {
										"type": "string",
										"description": "A flash loader specification XML file, with the filename extension '.board'.",
										"format": "uri"
									},
									"deviceMacros": {
										"type": "array",
										"description": "A list of device macros to load when running the flash loader.",
										"items": {
											"type": "string",
											"format": "uri"
										}
									}
								}
							},
							"plugins": {
								"type": "array",
								"description": "The set of plugins to be loaded during the debug session.",
								"items": {
									"type": "string",
									"format": "uri"
								},
								"default": []
							},
							"setupMacros": {
								"type": "array",
								"description": "A list of macros to be loaded with the debug session.",
								"items": {
									"type": "string",
									"format": "uri"
								},
								"default": []
							}
						}
					}
				},
				"initialConfigurations": [
					{
						"type": "cspy",
						"request": "launch",
						"name": "Debug with C-SPY",
						"target": "arm",
						"program": "${workspaceFolder}/Debug/Exe/ewproj.out",
						"stopOnEntry": true,
						"workbenchPath": "${command:iar-settings.toolchain} for an iar-build project or path to EW root.",
						"projectPath": "${command:iar-settings.project-file} for an iar-build project.",
						"projectConfiguration": "${command:iar-settings.project-configuration} for an iar-build project. Remove this for other project types",
						"driver": "sim2",
						"driverOptions": [
							"--endian=little",
							"--cpu=<CPU_NAME>",
							"--fpu=None",
							"--semihosting"
						]
					}
				],
				"configurationSnippets": [
					{
						"label": "C-SPY Debug: Launch .ewp project",
						"description": "A new configuration for debugging a program with C-SPY that is using the iar-build extension.",
						"body": {
							"type": "cspy",
							"request": "launch",
							"name": "${1:Debug with C-SPY}",
							"target": "arm",
							"program": "^\"\\${workspaceFolder}/\\${command:iar-settings.project-configuration}/Exe/${2:ewproj.out}\"",
							"stopOnEntry": true,
							"workbenchPath": "^\"\\${command:iar-settings.toolchain}\"",
							"projectPath": "^\"\\${command:iar-settings.project-file}\"",
							"projectConfiguration": "^\"\\${command:iar-settings.project-configuration}\"",
							"driver": "sim2",
							"driverOptions": [
								"--endian=little",
								"--cpu=<CPU_NAME>",
								"--fpu=None",
								"--semihosting"
							],
							"download": {
								"flashLoader": "",
								"deviceMacros": []
							}
						}
					},
					{
						"label": "C-SPY Debug: Generic launch configuration",
						"description": "A new configuration for debugging a program with C-SPY.",
						"body": {
							"type": "cspy",
							"request": "launch",
							"name": "${1:Debug with C-SPY}",
							"target": "arm",
							"program": "^\"\\${workspaceFolder}/Debug/Exe/${2:ewproj.out}\"",
							"stopOnEntry": true,
							"workbenchPath": "${3:workbenchPath}",
							"driver": "sim2",
							"driverOptions": [
								"--endian=little",
								"--cpu=<CPU_NAME>",
								"--fpu=None",
								"--semihosting"
							],
							"download": {
								"flashLoader": "",
								"deviceMacros": []
							}
						}
					}
				]
			}
		]
	}
}
