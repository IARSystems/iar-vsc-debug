{
	"name": "cspy-debug",
	"displayName": "C-SPY Debug",
	"version": "0.25.0",
	"publisher": "hampusad",
	"description": "An example extension & Debug Adapter for C-SPY with VS Code",
	"repository": {
		"type": "git",
		"url": "https://github.com/mario-pi/iar-vsc-debug"
	},
	"author": {
		"name": "Hampus Adolfsson",
		"email": "hampusad@iar.com"
	},
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.46.0",
		"node": "^14.4.0"
	},
	"categories": [
		"Debuggers"
	],
	"private": true,
	"dependencies": {
		"await-notify": "1.0.1",
		"arraybuffer-to-string": "^1.0.1",
		"async-mutex": "^0.1.3",
		"mutex-promise": "^0.1.0",
		"vscode-debugadapter": "^1.41.1",
		"vscode-debugprotocol": "^1.41.0",
		"vscode-languageserver": "^3.5.0",
		"thrift": "^0.12.0",
		"@types/thrift": "^0.10.9"
	},
	"devDependencies": {
		"@types/vscode": "^1.46.0",
		"@types/mocha": "^2.2.42",
		"@types/node": "^14.0.0",
		"mocha": "^3.5.0",
		"tslint": "^5.8.0",
		"typescript": "^3.8.0",
		"vsce": "^1.63.0",
		"vscode-test": "^1.3.0",
		"vscode-debugadapter-testsupport": "^1.33.0"
	},
	"scripts": {
		"prepublish": "tsc -p ./src",
		"compile": "tsc -p ./src",
		"tslint": "tslint ./src/**/*.ts",
		"watch": "tsc -w -p ./src",
		"test": "mocha -u tdd ./out/tests/",
		"package": "vsce package",
		"publish": "vsce publish",
		"pkgvars": "node ./node_modules/vscode/bin/install"
	},
	"main": "./out/extension",
	"activationEvents": [
		"onDebug"
	],
	"contributes": {
		"languages": [
			{
				"id": "iarmemory",
				"extensions": [
					".iarmem"
				]
			}
		],
		"grammars": [
			{
				"language": "iarmemory",
				"scopeName": "source.iarmemory",
				"path": "./syntaxes/iarmemory.tmLanguage.json"
			}
		],
		"menus": {
			"debug/toolBar": [
				{
					"command": "iar.stepOverInstruction"
				},
				{
					"command": "iar.stepIntoInstruction"
				}
			]
		},
		"commands": [
			{
				"command": "iar.stepOverInstruction",
				"icon": "images/istepover.png",
				"category": "IAR Debug",
				"title": "Intstruction Step Over"
			},
			{
				"command": "iar.stepIntoInstruction",
				"icon": "images/istepin.png",
				"category": "IAR Debug",
				"title": "Intstruction Step Into"
			}
		],
		"breakpoints": [
			{
				"language": "c"
			}
		],
		"debuggers": [
			{
				"type": "cspy",
				"label": "C-SPY Debug",
				"program": "./out/dap/cspyDebug.js",
				"runtime": "node",
				"languages": [
					"c"
				],
				"configurationAttributes": {
					"launch": {
						"required": [
							"program",
							"workbenchPath",
							"projectPath",
							"projectConfiguration"
						],
						"properties": {
							"program": {
								"type": "string",
								"description": "Absolute path to a .out file to debug.",
								"default": "${workspaceFolder}/Debug/Exe/ewproj.out"
							},
							"stopOnEntry": {
								"type": "boolean",
								"description": "Automatically stop after launch.",
								"default": true
							},
							"trace": {
								"type": "boolean",
								"description": "Enable logging of the Debug Adapter Protocol.",
								"default": true
							},
							"workbenchPath": {
								"type": "string",
								"description": "Path to the Embedded Workbench installation to use.",
								"default": "${command:iar-settings.workbench}"
							},
							"projectPath": {
								"type": "string",
								"description": "Path to the .ewp file of the project to debug.",
								"default": "${command:iar-settings.project-file}"
							},
							"projectConfiguration": {
								"type": "string",
								"description": "Name of the project configuration to debug (e.g. Debug).",
								"default": "${command:iar-settings.project-configuration}"
							}
						}
					}
				},
				"initialConfigurations": [
					{
						"type": "cspy",
						"request": "launch",
						"name": "Debug with C-SPY",
						"program": "${workspaceFolder}/Debug/Exe/ewproj.out",
						"stopOnEntry": true,
						"workbenchPath": "${command:iar-settings.workbench}",
						"projectPath": "${command:iar-settings.project-file}",
						"projectConfiguration": "${command:iar-settings.project-configuration}"
					}
				],
				"configurationSnippets": [
					{
						"label": "C-SPY Debug: Launch",
						"description": "A new configuration for debugging a program with C-SPY",
						"body": {
							"type": "cspy",
							"request": "launch",
							"name": "${4:Debug with C-SPY}",
							"program": "^\"\\${workspaceFolder}/Debug/Exe/${1:ewproj.out}\"",
							"stopOnEntry": true,
							"workbenchPath": "${command:iar-settings.workbench}",
							"projectPath": "${command:iar-settings.project-file}",
							"projectConfiguration": "${command:iar-settings.project-configuration}"
						}
					}
				]
			}
		]
	}
}
