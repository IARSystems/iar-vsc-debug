{
	"name": "cspy-debug",
	"displayName": "C-SPY Debug",
	"version": "0.25.0",
	"publisher": "hampusad",
	"description": "An example extension & Debug Adapter for C-SPY with VS Code",
	"author": {
		"name": "Hampus Adolfsson",
		"email": "hampusad@iar.com"
	},
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.17.0",
		"node": "^7.9.0"
	},
	"categories": [
		"Debuggers"
	],
	"private": true,
	"dependencies": {
		"@types/node": "^7.0.43",
		"arraybuffer-to-string": "^1.0.1",
		"async-mutex": "^0.1.3",
		"mutex-promise": "^0.1.0",
		"system-sleep": "^1.3.6",
		"typescript": "^2.6.1",
		"vscode-debugadapter": "^1.35.0",
		"vscode-debugprotocol": "^1.35.0",
		"vscode-languageserver": "^3.5.0"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.42",
		"@types/node": "^7.0.43",
		"mocha": "^3.5.0",
		"tslint": "^5.8.0",
		"typescript": "^2.6.1",
		"vsce": "^1.63.0",
		"vscode": "^1.1.34",
		"vscode-debugadapter-testsupport": "^1.24.0"
	},
	"scripts": {
		"prepublish": "tsc -p ./src",
		"compile": "tsc -p ./src",
		"tslint": "tslint ./src/**/*.ts",
		"watch": "tsc -w -p ./src",
		"test": "mocha -u tdd ./out/tests/",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"package": "vsce package",
		"publish": "vsce publish",
		"pkgvars": "node ./node_modules/vscode/bin/install"
	},
	"main": "./out/extension",
	"activationEvents": [
		"onDebug"
	],
	"contributes": {
		"languages": [
			{
				"id": "iarmemory",
				"extensions": [".iarmem"]
			}
		],
		"grammars": [
			{
				"language": "iarmemory",
				"scopeName": "source.iarmemory",
				"path": "./syntaxes/iarmemory.tmLanguage.json"
			}
		],
		"menus": {
			"debug/toolBar": [
				{
					"command": "iar.stepOverInstruction"
				},
				{
					"command": "iar.stepIntoInstruction"
				}
			]
		},
		"commands": [
			{
				"command": "iar.stepOverInstruction",
				"icon": "images/istepover.png",
				"category": "IAR Debug",
				"title": "Intstruction Step Over"
			},
			{
				"command": "iar.stepIntoInstruction",
				"icon": "images/istepin.png",
				"category": "IAR Debug",
				"title": "Intstruction Step Into"
			}
		],
		"breakpoints": [
			{
				"language": "c"
			}
		],
		"debuggers": [
			{
				"type": "cspy",
				"label": "C-SPY Debug",
				"program": "./out/cspyDebug.js",
				"runtime": "node",
				"configurationAttributes": {
					"launch": {
						"required": [
							"program",
							"sourceFile",
							"workbenchPath"
						],
						"properties": {
							"program": {
								"type": "string",
								"description": "Absolute path to a .out file to debug.",
								"default": "${workspaceFolder}/Debug/Exe/ewproj.out"
							},
							"stopOnEntry": {
								"type": "boolean",
								"description": "Automatically stop after launch.",
								"default": true
							},
							"trace": {
								"type": "boolean",
								"description": "Enable logging of the Debug Adapter Protocol.",
								"default": true
							},
							"workbenchPath": {
								"type": "string",
								"description": "Path to the Embedded Workbench installation to use.",
								"default": {
									"windows": "c:/Program Files (x86)/IAR Systems/Embedded Workbench/",
									"linux": "/usr/share/IARSystems/Embedded Workbench/"
								}
							}
						}
					}
				},
				"initialConfigurations": [
					{
						"type": "cspy",
						"request": "launch",
						"name": "Debug with C-SPY",
						"program": "${workspaceFolder}/Debug/Exe/ewproj.out",
						"stopOnEntry": true,
						"workbenchPath": {
							"windows": "c:/Program Files (x86)/IAR Systems/Embedded Workbench/",
							"linux": "/usr/share/IARSystems/Embedded Workbench/"
						}
					}
				],
				"configurationSnippets": [
					{
						"label": "C-SPY Debug: Launch",
						"description": "A new configuration for debugging a program with C-SPY",
						"body": {
							"type": "cspy",
							"request": "launch",
							"name": "${4:Debug with C-SPY}",
							"program": "^\"\\${workspaceFolder}/Debug/Exe/${1:ewproj.out}\"",
							"stopOnEntry": true,
							"workbenchPath": "${3:Path to installation}"
						}
					}
				]
			}
		]
	}
}
