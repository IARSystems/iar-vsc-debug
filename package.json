{
	"name": "cspy-debug",
	"displayName": "C-SPY Debug",
	"version": "0.25.0",
	"publisher": "hampusad",
	"description": "An example extension & Debug Adapter for C-SPY with VS Code",
	"author": {
		"name": "Hampus Adolfsson",
		"email": "hampusad@iar.com"
	},
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.17.0",
		"node": "^7.9.0"
	},
	"categories": [
		"Debuggers"
	],
	"private": true,
	"dependencies": {
		"@types/node": "^7.0.43",
		"arraybuffer-to-string": "^1.0.1",
		"async-mutex": "^0.1.3",
		"mutex-promise": "^0.1.0",
		"system-sleep": "^1.3.6",
		"typescript": "^2.6.1",
		"vscode-debugadapter": "^1.35.0",
		"vscode-debugprotocol": "^1.35.0",
		"vscode-languageserver": "^3.5.0"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.42",
		"@types/node": "^7.0.43",
		"mocha": "^3.5.0",
		"tslint": "^5.8.0",
		"typescript": "^2.6.1",
		"vsce": "^1.63.0",
		"vscode": "^1.1.34",
		"vscode-debugadapter-testsupport": "^1.24.0"
	},
	"scripts": {
		"prepublish": "tsc -p ./src",
		"compile": "tsc -p ./src",
		"tslint": "tslint ./src/**/*.ts",
		"watch": "tsc -w -p ./src",
		"test": "mocha -u tdd ./out/tests/",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"package": "vsce package",
		"publish": "vsce publish",
		"pkgvars": "node ./node_modules/vscode/bin/install"
	},
	"main": "./out/extension",
	"activationEvents": [
		"onDebug"
	],
	"contributes": {
		"breakpoints": [
			{
				"language": "c"
			}
		],
		"debuggers": [
			{
				"type": "cspy",
				"label": "C-SPY Debug",
				"program": "./out/cspyDebug.js",
				"runtime": "node",
				"configurationAttributes": {
					"launch": {
						"required": [
							"program"
						],
						"properties": {
							"program": {
								"type": "string",
								"description": "Absolute path to a .c file.",
								"default": "${workspaceFolder}/main.c"
							},
							"stopOnEntry": {
								"type": "boolean",
								"description": "Automatically stop after launch.",
								"default": true
							},
							"trace": {
								"type": "boolean",
								"description": "Enable logging of the Debug Adapter Protocol.",
								"default": true
							}
						}
					}
				},
				"initialConfigurations": [
					{
						"type": "cspy",
						"request": "launch",
						"name": "Debug with C-SPY",
						"program": "${workspaceFolder}/main.c",
						"stopOnEntry": true
					}
				],
				"configurationSnippets": [
					{
						"label": "C-SPY Debug: Launch",
						"description": "A new configuration for debugging a program with C-SPY",
						"body": {
							"type": "cspy",
							"request": "launch",
							"name": "${2:Debug with C-SPY}",
							"program": "^\"\\${workspaceFolder}/${1:Source}\"",
							"stopOnEntry": true
						}
					}
				]
			}
		]
	}
}
