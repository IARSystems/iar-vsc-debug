{
	"name": "cspy-debug",
	"displayName": "C-SPY Debug",
	"version": "0.25.0",
	"publisher": "hampusad",
	"description": "An example extension & Debug Adapter for C-SPY with VS Code",
	"repository": {
		"type": "git",
		"url": "https://github.com/mario-pi/iar-vsc-debug"
	},
	"author": {
		"name": "Hampus Adolfsson",
		"email": "hampusad@iar.com"
	},
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.46.0",
		"node": "^14.4.0"
	},
	"categories": [
		"Debuggers"
	],
	"private": true,
	"dependencies": {
		"@types/thrift": "^0.10.9",
		"arraybuffer-to-string": "^1.0.1",
		"async-mutex": "^0.1.3",
		"await-notify": "1.0.1",
		"mutex-promise": "^0.1.0",
		"thrift": "^0.12.0",
		"uuid": "^8.3.2",
		"vscode-debugadapter": "^1.41.1",
		"vscode-debugprotocol": "^1.41.0",
		"vscode-languageserver": "^3.5.0"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.7",
		"@types/node": "^14.7.0",
		"@types/node-int64": "^0.4.29",
		"@types/uuid": "^8.3.1",
		"@types/vscode": "^1.46.0",
		"@typescript-eslint/eslint-plugin": "^5.2.0",
		"@typescript-eslint/parser": "^5.2.0",
		"eslint": "^8.1.0",
		"java-properties": "^1.0.2",
		"mocha": "^6.1.4",
		"mocha-junit-reporter": "2.0.0",
		"tslint": "^5.8.0",
		"typescript": "^4.3.0",
		"vsce": "^1.63.0",
		"vscode-debugadapter-testsupport": "^1.33.0",
		"vscode-test": "^1.3.0"
	},
	"scripts": {
		"prepublish": "tsc -p .",
		"compile": "tsc -p .",
		"watch": "tsc -w -p .",
		"test": "mocha -u tdd ./out/tests/",
		"package": "vsce package",
		"publish": "vsce publish",
		"pkgvars": "node ./node_modules/vscode/bin/install",
		"lint": "eslint . --ext .ts"
	},
	"main": "./out/extension",
	"activationEvents": [
		"onDebugResolve:cspy",
		"onDebugDynamicConfigurations:cspy"
	],
	"contributes": {
		"languages": [
			{
				"id": "iarmemory",
				"extensions": [
					".iarmem"
				]
			}
		],
		"grammars": [
			{
				"language": "iarmemory",
				"scopeName": "source.iarmemory",
				"path": "./syntaxes/iarmemory.tmLanguage.json"
			}
		],
		"menus": {
			"debug/toolBar": [
				{
					"command": "iar.stepOverInstruction",
					"when": "debugConfigurationType == cspy"
				},
				{
					"command": "iar.stepIntoInstruction",
					"when": "debugConfigurationType == cspy"
				}
			]
		},
		"commands": [
			{
				"command": "iar.stepOverInstruction",
				"icon": "images/istepover.png",
				"category": "IAR Debug",
				"title": "Intstruction Step Over"
			},
			{
				"command": "iar.stepIntoInstruction",
				"icon": "images/istepin.png",
				"category": "IAR Debug",
				"title": "Intstruction Step Into"
			}
		],
		"breakpoints": [
			{
				"language": "c"
			},
			{
				"language": "cpp"
			}
		],
		"debuggers": [
			{
				"type": "cspy",
				"label": "C-SPY Debug",
				"program": "./out/dap/cspyDebug.js",
				"runtime": "node",
				"languages": [
					"c",
					"cpp"
				],
				"configurationAttributes": {
					"launch": {
						"required": [
							"target",
							"program",
							"workbenchPath",
							"projectPath",
							"projectConfiguration",
							"driver",
							"driverOptions"
						],
						"properties": {
							"target":{
								"type": "string",
								"description": "The target type, e.g, arm, in lower case.",
								"default": "arm"
							},
							"program": {
								"type": "string",
								"description": "Absolute path to a .out file to debug.",
								"default": "${workspaceFolder}/Debug/Exe/ewproj.out"
							},
							"stopOnEntry": {
								"type": "boolean",
								"description": "Automatically stop after launch.",
								"default": true
							},
							"workbenchPath": {
								"type": "string",
								"description": "Path to the Embedded Workbench installation to use (e.g. \"C:\\\\Program Files (x86)\\\\IAR Systems\\\\Embedded Workbench 8.3\").",
								"default": "${command:iar-settings.workbench} for an iar-vsc project or path to EW root."
							},
							"projectPath": {
								"type": "string",
								"description": "The workspace to use during the debug session",
								"default": "${command:iar-settings.project-file} for an iar-vsc projects or path to project (${workspaceFolder} for current folder)"
							},
							"projectConfiguration": {
								"type": "string",
								"description": "Name of the project configuration to debug (e.g. Debug).",
								"default": "${command:iar-settings.project-configuration} for an iar-vsc projects or the name of the configuration."
							},
							"driver": {
								"type": "string",
								"description": "The driver to use.",
								"default": "SIM2",
								"enum": [
									"SIM2",
									"JET",
									"JLINK"
								],
								"enumDescriptions": [
									"The driver to use for running the simulator.",
									"I-Jet driver for hardware debugging.",
									"J-Link driver for hardware debugging."
								]
							},
							"driverOptions": {
								"type": "array",
								"description": "The commandline to use when launching.",
								"items": {
									"type": "string"
								},
								"default": [
									"--endian=little",
									"--cpu=<CPU_NAME>",
									"--fpu=None",
									"--semihosting"
								]
							},
							"download": {
								"type": "object",
								"description": "Options for downloading to hardware. Can be omitted. Will be ignored for simulator drivers.",
								"properties": {
									"flashLoader": {
										"type": "string",
										"description": "A flash loader specification XML file, with the filename extension board.",
										"format": "uri"
									},
									"deviceMacros": {
										"type": "array",
										"description": "A list of device macros to load when running the flash loader.",
										"items": {
											"type": "string",
											"format": "uri"
										}
									}
								}
							},
							"plugins": {
								"type": "array",
								"description": "The set of plugins to be loaded during the debug session",
								"items": {
									"type": "string"
								},
								"default": []
							},
							"setupMacros": {
								"type": "array",
								"description": "List of macros to be loaded with the debug session",
								"items": {
									"type": "string"
								},
								"default": []
							}
						}
					}
				},
				"initialConfigurations": [
					{
						"type": "cspy",
						"request": "launch",
						"name": "Debug with C-SPY",
						"target": "arm",
						"program": "${workspaceFolder}/Debug/Exe/ewproj.out",
						"stopOnEntry": true,
						"workbenchPath": "${command:iar-settings.workbench} for an iar-vsc project or path to EW root.",
						"projectPath": "${command:iar-settings.project-file} for an iar-vsc projects or path to project (${workspaceFolder} for current folder)",
						"projectConfiguration": "${command:iar-settings.project-configuration} for an iar-vsc projects or the name of the configuration.",
						"driver": "SIM2",
						"driverOptions": [
							"--endian=little",
							"--cpu=<CPU_NAME>",
							"--fpu=None",
							"--semihosting"
						]
					}
				],
				"configurationSnippets": [
					{
						"label": "C-SPY Debug: Launch iar-vsc project",
						"description": "A new configuration for debugging a program with C-SPY that is using the iar-vsc extension",
						"body": {
							"type": "cspy",
							"request": "launch",
							"name": "${1:Debug with C-SPY}",
							"target": "arm",
							"program": "^\"\\${workspaceFolder}/\\${command:iar-settings.project-configuration}/Exe/${2:ewproj.out}\"",
							"stopOnEntry": true,
							"workbenchPath": "^\"\\${command:iar-settings.workbench}\"",
							"projectPath": "^\"\\${command:iar-settings.project-file}\"",
							"projectConfiguration": "^\"\\${command:iar-settings.project-configuration}\"",
							"driver": "SIM2",
							"driverOptions":[
								"--endian=little",
								"--cpu=<CPU_NAME>",
								"--fpu=None",
								"--semihosting"
							],
							"download": {
								"flashLoader": "",
								"deviceMacros": []
							}
						}
					},
					{
						"label": "C-SPY Debug: Generic launch configuration",
						"description": "A new configuration for debugging a program with C-SPY",
						"body": {
							"type": "cspy",
							"request": "launch",
							"name": "${1:Debug with C-SPY}",
							"target": "arm",
							"program": "^\"\\${workspaceFolder}/Debug/Exe/${2:ewproj.out}\"",
							"stopOnEntry": true,
							"workbenchPath": "${3:workbenchPath}",
							"projectPath": "^\"\\${workspaceFolder}\"",
							"projectConfiguration": "^\"Debug\"",
							"driver": "SIM2",
							"driverOptions":[
								"--endian=little",
								"--cpu=<CPU_NAME>",
								"--fpu=None",
								"--semihosting"
							],
							"download": {
								"flashLoader": "",
								"deviceMacros": []
							}
						}
					}
				]
			}
		]
	}
}
